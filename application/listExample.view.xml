<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="application.listExample" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="List Example">
		<content>

			<!-- Best practice notes -->
			<Panel expandable="true" expanded="true">
				<headerToolbar>
      		<Toolbar height="3rem">
        		<Text text="Best Practice"/>
      		</Toolbar>
    		</headerToolbar>
				<content>
					<VBox>
						<items>
							<Text text="This project provides a best practice example on how to create a list using the mobile control. The type of list item can be swapped in and out for any of the other types."/>
							<Text text="Example 1 shows a list being bound to an array in the model"/>
							<Text text="Example 2 shows a static list with hard coded options, because sometimes you need that."/>
							<Text text="Dos and dont's:"/>
							<Text text="Do set the select event on the list. This will provide the context for the selected item in the controller."/>
							<Text text="Do set the mode to SingleSelectMaster, this will give you the highlighting on the selected item."/>
							<Text text="Don't set the press event on the list item, it's not required."/>
						</items>
					</VBox>
				</content>
			</Panel>

			<!-- Example 1-->
			<Panel expandable="true" expanded="false" class="listExample">
				<headerToolbar>
      		<Toolbar height="3rem">
        		<Text text="Example 1"/>
      		</Toolbar>
    		</headerToolbar>
				<content>
					<List items="{exampleList>/data}" noDataText="No items" select="onItemPress" mode="SingleSelectMaster">
            <items>
              <ObjectListItem title="{exampleList>title}" number="{exampleList>number}">
              </ObjectListItem>
            </items>
          </List>
				</content>
			</Panel>

			<!-- Example 2-->
			<Panel expandable="true" expanded="false" class="listExample">
				<headerToolbar>
      		<Toolbar height="3rem">
        		<Text text="Example 2"/>
      		</Toolbar>
    		</headerToolbar>
				<content>
					<List noDataText="No items" mode="SingleSelectMaster">
            <items>
              <ObjectListItem title="List Item 1" press="onThisParticularItemPress"></ObjectListItem>
							<ObjectListItem title="List Item 2" press="onThatParticularItemPress"></ObjectListItem>
            </items>
          </List>
				</content>
			</Panel>
    </content>
  </Page>
</core:View>
